    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LightFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
