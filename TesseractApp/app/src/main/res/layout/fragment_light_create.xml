<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".light.LightCreateFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="353dp"
            android:layout_height="79dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">

            <Spinner
                android:id="@+id/spinner_leds_edit_patterns"
                android:layout_width="320dp"
                android:layout_height="36dp"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="291dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="99dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="81dp"
                android:text="Select Pattern"
                android:textAlignment="center" />

        </RelativeLayout>

        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/colorPickerView"
            android:layout_width="210dp"
            android:layout_height="198dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="156dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:palette="@drawable/palette"
            app:selector="@drawable/wheel" />

        <ImageView
            android:id="@+id/editImageViewFirstColor"
            android:layout_width="55dp"
            android:layout_height="34dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="@+id/editTextViewFirstColor"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/editTextViewFirstColor"
            app:layout_constraintTop_toBottomOf="@+id/editTextViewFirstColor">

        </ImageView>

        <ImageView
            android:id="@+id/editImageViewSecondColor"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="@+id/editTextViewSecondColor"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/editTextViewSecondColor"
            app:layout_constraintTop_toBottomOf="@+id/editTextViewSecondColor">

        </ImageView>

        <ImageView
            android:id="@+id/editImageViewThirdColor"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="@+id/editTextViewThirdColor"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/editTextViewThirdColor"
            app:layout_constraintTop_toBottomOf="@+id/editTextViewThirdColor">

        </ImageView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="282dp"
            android:text="Select Colors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLightName" />

        <Button
            android:id="@+id/buttonFinishLightEdit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="75dp"
            android:layout_height="39dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark"
            android:text="Finish"
            android:textColor="@color/Commands"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Customize"
                android:textAlignment="textStart"
                android:textColor="@color/Commands"
                android:textSize="24sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/editTextViewFirstColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/colorPickerView"
            app:layout_constraintTop_toTopOf="@+id/colorPickerView" />

        <TextView
            android:id="@+id/editTextViewSecondColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/editTextViewFirstColor"
            app:layout_constraintStart_toStartOf="@+id/editTextViewFirstColor"
            app:layout_constraintTop_toBottomOf="@+id/editImageViewFirstColor" />

        <TextView
            android:id="@+id/editTextViewThirdColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/editTextViewSecondColor"
            app:layout_constraintStart_toStartOf="@+id/editTextViewSecondColor"
            app:layout_constraintTop_toBottomOf="@+id/editImageViewSecondColor" />

        <EditText
            android:id="@+id/editTextLightName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Choose name"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout4" />

        <EditText
            android:id="@+id/editTextCreateSpeed"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Speed"
            android:inputType="number"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <EditText
            android:id="@+id/editTextCreateIntensity"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Intensity"
            android:inputType="number"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/editTextCreateSpeed"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Parameters"
            app:layout_constraintStart_toStartOf="@+id/colorPickerView"
            app:layout_constraintTop_toBottomOf="@+id/colorPickerView" />

        <Spinner
            android:id="@+id/spinner_create_modifier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextCreateIntensity"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout4"
            app:layout_constraintStart_toEndOf="@+id/editTextCreateIntensity"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>